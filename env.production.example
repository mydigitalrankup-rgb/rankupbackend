# Production Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Atlas (Recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/glinthive?retryWrites=true&w=majority

# JWT Secret (Change this to a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this

# CORS Origin (Your domain)
CLIENT_ORIGIN=https://yourdomain.com

# Optional: Email settings for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
